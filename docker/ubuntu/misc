# syntax=docker/dockerfile:experimental

FROM docker.codingcafe.org/xkszltl/roaster/ubuntu:stage-util

ARG LABEL_BUILD_ID=Undefined
LABEL BUILD_ID=$LABEL_BUILD_ID

COPY [".", "/etc/roaster/scripts"]

RUN --mount=type=cache,id=ccache,target=~/.ccache /etc/roaster/scripts/setup.sh catch2 jsoncpp rapidjson simdjson pybind grpc libpng mkl-dnn opencv leveldb rocksdb lmdb
